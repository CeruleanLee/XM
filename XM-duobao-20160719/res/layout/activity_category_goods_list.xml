<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_height"
        >
        <ImageView 
            android:id="@+id/backBtn"
            android:layout_width="@dimen/base_title_height"
            android:layout_height="@dimen/base_title_height"
            android:src="@drawable/ic_back"
            android:padding="11dp"
            android:background="@drawable/selector_home_btn_bg"
            android:clickable="true"
            />
         <ImageView 
            android:id="@+id/shoppingCartBtn"
            android:layout_width="@dimen/base_title_height"
            android:layout_height="@dimen/base_title_height"
            android:src="@drawable/ic_listing"
            android:padding="13dp"
            android:background="@drawable/selector_home_btn_bg"
            android:clickable="true"
            android:layout_alignParentRight="true"
            />
        <TextView 
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="十元夺宝"
            android:textSize="17sp"
            android:textColor="#444444"
            android:layout_toRightOf="@id/backBtn"
            android:layout_centerVertical="true"
            />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#55444444"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    >
	    <TextView 
	        android:id="@+id/goodsTotalTv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="共16件商品"
	        android:visibility="gone"
	        android:layout_centerVertical="true"
	        android:paddingLeft="10dp"
	        />
	    <TextView 
	        android:id="@+id/allToShoppingCartBtn"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="全部加入清单"
	        android:gravity="center"
	        android:background="@drawable/selector_home_btn_bg"
	        android:layout_alignParentRight="true"
	        android:textColor="#ff0000"
	        android:paddingLeft="3dp"
	        android:paddingRight="3dp"
	        android:layout_marginRight="10dp"
	        android:clickable="true"
	        />
	    <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#44444444"
            android:layout_alignParentBottom="true"
            />
	</RelativeLayout>
	<ListView 
	    android:id="@+id/listView"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:divider="@null"
	    ></ListView>
</LinearLayout>
