<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#88D1D1D1"
        android:clickable="true"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.bwf.xmduobao.ui.view.DrawableCenterTextView
            android:id="@+id/hotCheckedTv"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="热门"
			android:textColor="@color/selector_home_checkedtv_color"
			android:gravity="center"   
			android:textSize="14sp"
			android:padding="15dp"   
			android:checked="true"   
            />
        <com.bwf.xmduobao.ui.view.DrawableCenterTextView
            android:id="@+id/totalTimesCheckedTv"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="总需次数"
			android:textColor="@color/selector_home_checkedtv_color"
			android:padding="15dp" 
			android:textSize="14sp"
			android:gravity="right"
			android:drawablePadding="5dp"
			android:drawableRight="@drawable/ic_home_total_disable"  
            />
    </LinearLayout>
</LinearLayout>